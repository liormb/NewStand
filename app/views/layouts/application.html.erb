<!DOCTYPE html>
<html>
<head>
  <title>Newstand</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if user_signed_in? %>
		<h5>Hello <%= User.find(current_user.id).fullname %></h5>
		<a href="<%= destroy_user_session_path %>">Sign Out</a>
	<% else %>
		<a href="<%= user_session_path %>">Sign In</a>
		<a href="<%= new_user_registration_path %>">Sign Up</a>
	<% end %>

	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
	
	<%= yield %>

</body>
</html>
