<!DOCTYPE html>
<html>
<head>
  <title>Newstand</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="page">

		<div class="top-header-container col-lg-12">
			<header class="container col-lg-8 col-md-offset-2">
				<div class="logo"></div>

				<form class="search navbar-form navbar-left" role="search">
				  <div class="form-group">
				    <input type="text" class="form-control" placeholder="Search">
				  </div>
				  <button type="submit" class="btn btn-default">Submit</button>
				</form>

			</header>
		</div><!-- top-header-container -->

		<div class="bottom-header-container col-lg-12">
			<div class="container col-lg-8 col-md-offset-2">
				<nav class="navbar navbar-inverse" role="navigation">
					<ul class="nav navbar-nav">
					  <li><a href="#">News</a></li>
					  <li><a href="#">Sports</a></li>
					  <li><a href="#">Life</a></li>
					  <li><a href="#">Money</a></li>
					  <li><a href="#">Tech</a></li>
					  <li><a href="#">Travel</a></li>
					</ul>
				</nav>

				<div class="user dropdown">
					<a id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html"><div></div><span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
						<% if user_signed_in? %>
							<li><a href="/users/sign_out">Sign Out</a></li>
							<li>Hello <%= User.find(current_user.id).fullname %></li>
						<% else %>
							<li><a href="<%= user_session_path %>">Sign In</a></li>
							<li><a href="<%= new_user_registration_path %>">Sign Up</a></li>
						<% end %>
	  			</ul>
  			</div>

				<p class="notice"><%= notice %></p>
				<p class="alert .lead"><%= alert %></p>

			</div>
	  </div><!-- bottom-header-container -->

		<div class="container col-lg-8 col-md-offset-2">
			<%= yield %>
		</div>

	</div><!-- page -->
</body>
</html>
