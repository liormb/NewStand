<div class="jumbotron">
	
	<% if user_signed_in? %>
		<form action="/groups/new" method="post">
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
			<input type="hidden" name="article_url" value="<%= @article[:article_url] %>">
			<input type="hidden" name="image_url" value="<%= @article[:image_url] %>">
			<input type="hidden" name="source" value="<%= @article[:source] %>">
			<input type="hidden" name="title" value="<%= @article[:title] %>">
			<input type="hidden" name="description" value="<%= @article[:description] %>">
			<button id="submit" type="submit">Create Group</button>
		</form>
	<% end %>
	
	<h2><%= @article[:title] %></h2>

	<img src="<%= @article[:image_url] %>" alt="<%= @article[:title] %>">

	<%= render 'templates/guardian_paragraphs.html', :article => @article %>
	
</div>