<!-- The Guardian -->
<% if @guardian_response %>
	<% @guardian_response['response']['editorsPicks'][0..(@guardian_limit-1)].each do |v2,k2| %>
		<div class="jumbotron">
			<h5>The Guardian</h5>
			<h2><%= v2['webTitle'] %></h2>
			<h5><%= v2['webPublicationDate'] %></h5>
			<%
				trailText = v2['fields']['trailText']
				standfirst = v2['fields']['standfirst']
				description = trailText[0..2] == "<p>" ? standfirst : trailText
			%>
			<p><%= description %></p>
			<% image_url = v2['fields'].empty? ? "empty" : v2['fields']['thumbnail'] %>
			<% if not image_url.empty? %>
				<img src="<%= image_url %>" alt="<%= v2['webTitle'] %>" width="300">
			<% end %>
			<br><a href="<%= v2['webUrl'] %>" target="_blank">LINK</a>
			<hr>
		</div>
	<% end %>
<% end %>

<!-- New York Times -->
<% if @nytimes_response %>
	<% @nytimes_response['results'].each do |v2,k2| %>
		<div class="jumbotron">
			<h5><%= v2['source'] %></h5>
			<h2><%= v2['title'] %></h2>
			<h5><%= v2['published_date'] %></h5>
			<p><%= v2['abstract'] %></p>
			<% image_url = v2['multimedia'].empty? ? v2['thumbnail_standard'] : v2['multimedia'][0]['url'] %>
			<% if not image_url.empty? %>
				<img src="<%= image_url %>" alt="<%= v2['title'] %>" width="120" height="120">
			<% end %>
			<br><a href="<%= v2['url'] %>" target="_blank">LINK</a>
			<hr>
		</div>
	<% end %>
<% end %>

<!-- USA Today -->
<% if @usatoday_response %>
	<% @usatoday_response.each do |k1,v1| %>
		<div class="jumbotron">
			<% v1.each_with_index do |v2,k2| %>
				<h5>USA Today</h5>
				<h2><%= v2['title'] %></h2>
				<h5><%= v2['pubDate'] %></h5>
				<p><%= v2['description'] %></p>
				<% if not @usatoday_image_urls[k2] == "default_image_url" %>
					<img class="main-image" src="<%= @usatoday_image_urls[k2] %>" alt="<%= v2['title'] %>" width="120" height="120">
				<% end %>
				<br><a href="<%= v2['guid'][0]['value'] if v2['guid'][0]['isPermalink'] %>" target="_blank">LINK</a>
				<hr>
			<% end %>
		</div>
	<% end %>
<% end %>